{
  "autocmd": {
    "prefix": "autocmd",
    "body": [
      "vim.api.nvim_create_autocmd({'${1:event}'}, {",
        "  pattern = { '${2:*}' },",
        "  group = aug,",
        "  callback = function()",
        "    ${0}",
        "  end,",
        "  desc = '${4}',",
        "})"
    ],
    "description": "autocmd"
  },

  "pcall": {
    "prefix": "pcall",
    "body": "local ok, ${1:result} = pcall(${0})",
    "description": "pcall"
  },

  "for": {
    "prefix": "for",
    "body": " for ${1:_}, ${2:v} in ipairs($3) do\n$0\nend",
    "description": "for loop"
  },

  "augroup": {
    "prefix": "augroup",
    "body": "local aug = vim.api.nvim_create_augroup('$0', {})",
    "description": "Create augroup"
  },

  "pr": {
    "prefix": "pr",
    "body": "print(vim.inspect(${0}))",
    "description": "print inspect"
  },

  "module": {
    "prefix": "local M",
    "body": [
      "local M = {}\n",
      "$0\n",
      "return M"
    ],
    "description": "Module skeleton"
  },

  "mfunc": {
    "prefix": "mfunc",
    "body": [
      "local M = {}\n",
      "function M.${TM_FILENAME_BASE}($1)",
      "  $0",
      "end\n",
      "return setmetatable(M, {\n  __call = M.${TM_FILENAME_BASE}\n})"
    ],
    "description": "Module function skeleton with callable module and function"
  },

  "M.func": {
    "prefix": "M.func",
    "body": [
      "function M.${1}($2)",
      "  $0",
      "end\n"
    ],
    "description": "Module function"
  },

  "init": {
    "prefix": "init",
    "body": [
      "init = function()",
      "  ${0}",
      "end"
    ],
    "description": "lazy spec init"
  },

  "keys": {
    "prefix": "keys",
    "body": "vim.tbl_keys(${0})",
    "description": "vim.tbl_keys"
  },

  "return": {
    "prefix": "return",
    "body": ["return ${1:M}$0"],
    "description": "return value"
  },

  "assigment": {
    "prefix": "local",
    "body": ["local ${1:varName} = ${0:value}"],
    "description": "define a variable"
  },

  "if": {
    "prefix": "if",
    "body": ["if ${1:true} then", "\t$0", "end"]
  },

  "elseif": {
    "prefix": "elseif",
    "body": ["elseif ${1:true} then", "\t$0"]
  },

  "print": {
    "prefix": "print",
    "body": ["print(${0})"]
  }
}
