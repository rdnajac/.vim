{
  "function": {
    "prefix": "funcrion",
    "body": [
      "function! ${1:function_name}(${2:args})",
      "  ${0}",
      "endfunction"
    ],
    "description": "Function definition."
  },

  "if_exists_equals": {
    "prefix": "ifeg",
    "body": ["if !exists('g:${1}')", "let g:${1} = ${2:1}", "endif"],
    "description": "Global variable declaration"
  },

  "ifef": {
    "prefix": "ifneg",
    "body": ["if !exists('g:${1}')", "  finish", "endif"],
    "description": "Global variable declaration"
  },

  "if_exists_nvim": {
    "prefix": "ifnv",
    "body": ["if exists('nvim')", "  ${0}", "endif"]
  },

  "ifnnv": {
    "prefix": "ifnnv",
    "body": ["if !exists('nvim')", "  ${0}", "endif"]
  },

  "command": {
    "prefix": ["cmd", "<Cmd>"],
    "body": "<Cmd>${0}<CR>",
    "description": "Command call."
  },

  "plug": {
    "prefix": "Plug",
    "body": "Plug '${0}'",
    "description": "Plug invocation."
  }
}
