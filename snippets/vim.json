{
  "function": {
    "prefix": "function",
    "body": [
      "function! ${1}(${2}) abort",
      "  ${0}",
      "endfunction"
    ],
    "description": "Function definition."
  },

  "autoloadedfunction": {
    "prefix": "auto",
    "body": [
      "function! ${TM_FILENAME_BASE}#${1}(${2}) abort",
      "  ${0}",
      "endfunction"
    ],
    "description": "Function definition."
  },

  "if_exists_equals": {
    "prefix": "ifeq",
    "body": [
      "if !exists('g:${1}')",
      "  let g:${1} = ${2:1}",
      "endif"],
      "description": "Global variable declaration"
  },

  "ifne": {
    "prefix": "ifne",
    "body": ["if !exists('g:${1}')", "  let g:{1} = ", "endif"],
    "description": "Global variable declaration"
  },

  "if_has_nvim": {
    "prefix": "ifnv",
    "body": ["if has('nvim')", "  ${0}", "endif"]
  },

  "ifnnv": {
    "prefix": "ifnnv",
    "body": ["if !has('nvim')", "  ${0}", "endif"]
  },

  "command": {
    "prefix": ["cmd", "<Cmd>"],
    "body": "<Cmd>${0}<CR>",
    "description": "Command call."
  },

  "plug": {
    "prefix": "Plug",
    "body": "Plug '${0}'",
    "description": "Plug invocation."
  }
}
