#!/usr/bin/env -S nvim -u NONE -l

-- vim: ft=lua
local root = vim.fn.fnamemodify('%', ':p:h')
for _, name in ipairs({ 'config', 'data', 'state', 'cache' }) do
  vim.env[('XDG_%s_HOME'):format(name:upper())] = root .. '/' .. name
  -- print(vim.env[('XDG_%s_HOME'):format(name:upper())])
end
print(vim.fs.joinpath(vim.fn.stdpath('data'), 'site', 'pack', 'core', 'opt'))
vim.pack.add({ 'http://github.com/neovim/neovim.git' }, { confirm = false, load = false })
vim._print(true, vim.pack.get())
-- vim._print(true, vim.o.runtimepath)
